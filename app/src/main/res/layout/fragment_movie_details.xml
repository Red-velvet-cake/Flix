<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:id="@+id/scroller_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/transition_image_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/marquee_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300dp"
                android:scaleType="fitXY"
                android:src="@drawable/image4"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_44dp"
                android:background="@drawable/ic_backbutton_movie_details"
                app:layout_constraintStart_toStartOf="@id/marquee_image"
                app:layout_constraintTop_toTopOf="@id/marquee_image"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginTop="@dimen/_44dp"
                android:background="@drawable/ic_favourate_movie_details"
                app:layout_constraintEnd_toEndOf="@id/marquee_image"
                app:layout_constraintTop_toTopOf="@id/marquee_image"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24dp"
                android:layout_marginTop="@dimen/_44dp"
                android:background="@drawable/ic_saved_movie_details"
                app:layout_constraintEnd_toStartOf="@id/favorite_button"
                app:layout_constraintTop_toTopOf="@id/marquee_image"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/transition_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16dp"
                android:background="@drawable/ic_transition_images_indcator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/marquee_image"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/transition_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16dp"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@drawable/ic_transition_images_indcator"
                app:layout_constraintStart_toEndOf="@id/transition_image1"
                app:layout_constraintBottom_toBottomOf="@id/marquee_image"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/transition_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_16dp"
                android:layout_marginStart="@dimen/_8dp"
                android:background="@drawable/ic_transition_images_indcator"
                app:layout_constraintStart_toEndOf="@id/transition_image2"
                app:layout_constraintBottom_toBottomOf="@id/marquee_image"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/details_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:paddingEnd="@dimen/_16dp"
                app:layout_constraintTop_toBottomOf="@id/marquee_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="@dimen/_104dp"
                    android:layout_height="@dimen/_130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="The Little Mermaid"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_20sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_marginStart="@dimen/_12dp"
                    app:layout_constraintStart_toEndOf="@id/movie_poster"
                    app:layout_constraintTop_toTopOf="@id/movie_poster"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/movie_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginTop="@dimen/_16dp"
                    android:layout_marginStart="@dimen/_12dp"
                    app:layout_constraintTop_toBottomOf="@id/movie_title"
                    app:layout_constraintStart_toEndOf="@id/movie_poster"
                    tools:listitem="@layout/item_category_movie_details"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_time_movie_details"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layout_constraintStart_toEndOf="@id/movie_poster"
                    app:layout_constraintTop_toBottomOf="@id/movie_categories"
                    />
                <TextView
                    android:id="@+id/movie_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/font_secondary"
                    app:layout_constraintStart_toEndOf="@id/ic_time"
                    app:layout_constraintTop_toTopOf="@id/ic_time"
                    app:layout_constraintBottom_toBottomOf="@id/ic_time"
                    tools:text="2h 15m"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:src="@drawable/ic_language_movie_details"
                    android:layout_marginStart="@dimen/_12dp"
                    app:layout_constraintStart_toEndOf="@id/movie_poster"
                    app:layout_constraintTop_toBottomOf="@id/ic_time"
                    />
                <TextView
                    android:id="@+id/movie_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/font_secondary"
                    app:layout_constraintStart_toEndOf="@id/ic_language"
                    app:layout_constraintTop_toTopOf="@id/ic_language"
                    app:layout_constraintBottom_toBottomOf="@id/ic_language"
                    tools:text="English"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_imdb_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_imdb_movie_rate"
                    android:layout_marginTop="@dimen/_26dp"
                    app:layout_constraintTop_toBottomOf="@id/movie_poster"
                    app:layout_constraintStart_toStartOf="@id/movie_poster"
                    />
                <TextView
                    android:id="@+id/imdb_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textColor="@color/font_secondary"
                    app:layout_constraintStart_toEndOf="@id/ic_imdb_rate"
                    app:layout_constraintTop_toTopOf="@id/ic_imdb_rate"
                    app:layout_constraintBottom_toBottomOf="@id/ic_imdb_rate"
                    tools:text="7/10 Rating"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_user_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user_movie_rate"
                    android:layout_marginStart="@dimen/_12dp"
                    app:layout_constraintTop_toTopOf="@id/imdb_rate"
                    app:layout_constraintStart_toEndOf="@id/imdb_rate"
                    app:layout_constraintBottom_toBottomOf="@id/imdb_rate"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textColor="@color/font_secondary"
                    app:layout_constraintStart_toEndOf="@id/ic_user_rate"
                    app:layout_constraintTop_toTopOf="@id/ic_user_rate"
                    app:layout_constraintBottom_toBottomOf="@id/ic_user_rate"
                    tools:text="Rate This"
                    />
                <TextView
                    android:id="@+id/movie_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:textColor="@color/font_secondary"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/montserrat_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imdb_rate"
                    tools:text="The youngest of King Tritonâ€™s daughters, and the most defiant, Ariel longs to find out more about the world beyond the sea, and while visiting the surface, falls for the dashing Prince Eric...More"
                    />
                <TextView
                    android:id="@+id/top_cast_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_20sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/movie_description"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Top Cast"
                    />
                <TextView
                    android:id="@+id/see_all_top_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textColor="@color/font_accent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/top_cast_text"
                    app:layout_constraintBottom_toBottomOf="@id/top_cast_text"
                    tools:text="See All"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/top_cast_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layout_constraintTop_toBottomOf="@id/top_cast_text"
                    tools:listitem="@layout/item_top_cast_movie_details"
                   />
                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:textColor="@color/font_secondary"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintTop_toBottomOf="@id/top_cast_scroll_view"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="status"
                    />
                <TextView
                    android:id="@+id/movie_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/status_text"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Released"
                    />
                <TextView
                    android:id="@+id/released_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8dp"
                    android:textColor="@color/font_secondary"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintTop_toBottomOf="@id/movie_status"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="released date"
                    />
                <TextView
                    android:id="@+id/released_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/released_date_text"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="05/26/2023"
                    />
                <TextView
                    android:id="@+id/production_countries_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8dp"
                    android:textColor="@color/font_secondary"
                    android:textSize="@dimen/_12sp"
                    android:fontFamily="@font/montserrat_regular"
                    app:layout_constraintTop_toBottomOf="@id/released_status"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Production Countries"
                    />
                <TextView
                    android:id="@+id/production_countries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/production_countries_text"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="United States"
                    />
                <TextView
                    android:id="@+id/keywords_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/production_countries"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="keywords"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/keywords_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/keywords_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_keywords_movie_details"
                    />

                <TextView
                    android:id="@+id/similar_movies_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_20sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/keywords_scroll_view"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Similar Movies"
                    />
                <TextView
                    android:id="@+id/see_all_similar_movies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textColor="@color/font_accent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/similar_movies_text"
                    app:layout_constraintBottom_toBottomOf="@id/similar_movies_text"
                    tools:text="See All"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/similar_movies_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/similar_movies_text"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_movies_details"
                    />
                <TextView
                    android:id="@+id/Images_belong_to_movie_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_20sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/similar_movies_scroll"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Images belong a movie"
                    />
                <TextView
                    android:id="@+id/see_all_Images_belong_to_movie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textColor="@color/font_accent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/Images_belong_to_movie_text"
                    app:layout_constraintBottom_toBottomOf="@id/Images_belong_to_movie_text"
                    tools:text="See All"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Images_belong_to_movie_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/Images_belong_to_movie_text"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_image_belong_to_movie"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/latest_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150dp"
                    android:layout_marginTop="@dimen/_24dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/image4"
                    app:layout_constraintTop_toBottomOf="@id/Images_belong_to_movie_scroll"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="@dimen/_16sp"
                    android:textColor="@color/font_primary"
                    android:layout_marginStart="@dimen/_12dp"
                    android:layout_marginTop="@dimen/_12dp"
                    app:layout_constraintStart_toStartOf="@id/latest_image"
                    app:layout_constraintTop_toTopOf="@id/latest_image"
                    tools:text="latest"
                    />
                <TextView
                    android:id="@+id/reviews_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_20sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/latest_image"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Reviews"
                    />
                <TextView
                    android:id="@+id/see_all_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textColor="@color/font_accent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/reviews_text"
                    app:layout_constraintBottom_toBottomOf="@id/reviews_text"
                    tools:text="See All"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reviews_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/reviews_text"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_review_movie_details"
                    />
                <TextView
                    android:id="@+id/Recommendations_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24dp"
                    android:textColor="@color/font_primary"
                    android:textSize="@dimen/_20sp"
                    android:fontFamily="@font/montserrat_semibold"
                    app:layout_constraintTop_toBottomOf="@id/reviews_scroll"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Recommendations"
                    />
                <TextView
                    android:id="@+id/see_all_Recommendations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="@dimen/_16sp"
                    android:layout_marginStart="@dimen/_4dp"
                    android:textColor="@color/font_accent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/Recommendations_text"
                    app:layout_constraintBottom_toBottomOf="@id/Recommendations_text"
                    tools:text="See All"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/Recommendations_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/Recommendations_text"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:listitem="@layout/item_movies_details"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>